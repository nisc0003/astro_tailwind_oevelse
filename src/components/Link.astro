---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  size = "standard",
  variant = "textlink",
} = Astro.props;

// Standardstyling som gælder alle links
const linkStyling =
  "font-montserrat p-2 rounded-3xl duration-100 ease-in-out m-1 hover:shadow-[0_6px_12px_rgba(0,0,0,0.25)] hover:scale-102 ";

// Definer Tailwind classes for hver variant
const variantClasses = {
  textlink: "underline text-blue-600 hover:text-blue-800",
  primary:
    "bg-primary-500 text-white shadow-md hover:bg-white hover:text-black hover:outline hover:outline-2 outline-offset-1 hover:outline-black focus:text-black",
  secondary:
    "bg-secondary-500 text-white rounded shadow-sm hover:bg-white hover:text-black hover:outline hover:outline-2 outline-offset-1 hover:outline-black focus:text-black",
};

// Definer Tailwind classes for størrelser
const sizeClasses = {
  standard: "text-base",
  small: "text-sm  py-2 px-",
  medium: "text-base  py-2 px-6",
  large: "text-2xl  py-2 px-8",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>

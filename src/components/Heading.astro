---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  font = "sans",
  color = "black",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  large: "text-5xl font-extrabold mb-4 uppercase",
  medium: "text-5xl font-extrabold mb-4 uppercase",
  small: "text-3xl font-semibold mb-4 ",
  clamp: "text-[clamp(1rem,6.5vw,3rem)] font-extrabold uppercase",
};

const colorClasses = {
  dark: "text-dark",
  white: "text-white",
  black: "text-black",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
  serif: "font-serif",
};
---

<Htmlheading
  class:list={[
    sizeClasses[size],
    fontClasses[font],
    colorClasses[color],
    stylingclasses,
  ]}><slot /></Htmlheading
>

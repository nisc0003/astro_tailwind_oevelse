---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import "./index.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
---

<MainLayout title="Titel">
  <article>
    <h1>Index overskrift</h1>
    <Button>KNAPPELADE</Button>
    <p>
      Link til <Link href="/" target="_blank">Forside</Link>
    </p>
    <Image src={thumbsup} alt="" />
  </article>
  <section class="flex flex-col gap-3 p-6">
    <!---------------------------------- Øvelse 1------------------------------------>
    <div>
      <h2 class="mt-6 text-2xl uppercase font-semibold bg-red-200 p-4 rounded">
        Øvelse 1
      </h2>
      <Button>KNAPPELADE</Button>
    </div>
    <!---------------------------------- Øvelse 2------------------------------------>
    <div>
      <h2 class="mt-6 text-2xl uppercase font-semibold bg-blue-200 p-4 rounded">
        Øvelse 2
      </h2>
    </div>
    <div class="flex gap-4 place-items-center">
      <Button variant="primary" size="small">Small</Button>
      <Button variant="primary" size="medium">Medium</Button>
      <Button variant="primary" size="large">Large</Button>
    </div>
    <div class="flex gap-4 place-items-center">
      <Button variant="secondary" size="small">Small</Button>
      <Button variant="secondary" size="medium">Medium</Button>
      <Button variant="secondary" size="large">Large</Button>
    </div>

    <!---------------------------------- Øvelse 3------------------------------------>
    <div>
      <h2
        class="mt-6 text-2xl uppercase font-semibold bg-yellow-200 p-4 rounded"
      >
        Øvelse 3
      </h2>
      <h1>Køb bogen</h1>
      <form>
        <div>
          <label for="quantity">Antal:</label>
          <input type="number" id="quantity" name="quantity" min="1" />
        </div>
        <div>
          <input type="radio" id="postnord" name="forsendelse" />
          <label for="postnord">PostNord</label>

          <input type="radio" id="afhent" name="forsendelse" />
          <label for="afhent">Afhent selv</label><br />
        </div>
        <div>
          <label for="text">Nnavn:</label>
          <input type="text" value="Anders And" />
        </div>
        <div>
          <label for="text">Adresse:</label>
          <input type="text" value="Paradisæblevej 8" />
        </div>
        <div>
          <label for="email">E-mail:</label>
          <input type="email" value="anders@andeby.dk" />
        </div>
        <div>
          <label for="text">Postnummer & by:</label>
          <input type="text" value="0900" />
          <input type="text" value="Andeby C" />
        </div>
        <div>
          <label for="tel">Telefon:</label>
          <input type="tel" value="555-555" />
        </div>
        <input type="checkbox" til nyhedsbrev />
        <label for="checkbox">Ja tak til nyhedsbreve og tilbud</label>
      </form>
      <button type="submit" til knappen></button>
    </div>
    <!---------------------------------- Øvelse 4------------------------------------>
    <div>
      <h2
        class="mt-6 text-2xl uppercase font-semibold bg-green-200 p-4 rounded"
      >
        Øvelse 4
      </h2>
      <div class="mt-4 p-6 bg-white rounded shadow-md max-w-lg">
        <h2 class="text-xl font-semibold mb-4">Køb bogen</h2>
        <form id="form" class="space-y-4">
          <!-- Antal -->
          <div class="flex flex-col">
            <label for="quantity" class="mb-1 font-medium">Antal:</label>
            <input
              type="number"
              id="quantity"
              name="quantity"
              min="1"
              placeholder="1"
              class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
            />
          </div>

          <!-- Levering -->
          <div class="flex items-center gap-4">
            <input
              type="radio"
              id="postnord"
              name="forsendelse"
              class="accent-orange-400"
            />
            <label for="postnord">PostNord</label>
            <input
              type="radio"
              id="afhent"
              name="forsendelse"
              class="accent-orange-400"
            />
            <label for="afhent">Afhent selv</label>
          </div>

          <!-- Navn -->
          <div class="flex flex-col">
            <label for="name" class="mb-1 font-medium">Navn:</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Anders And"
              class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
            />
          </div>

          <!-- Adresse -->
          <div class="flex flex-col">
            <label for="address" class="mb-1 font-medium">Adresse:</label>
            <input
              type="text"
              id="address"
              name="address"
              placeholder="Paradisæblevej 8"
              class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
            />
          </div>

          <!-- E-mail -->
          <div class="flex flex-col">
            <label for="email" class="mb-1 font-medium">E-mail:</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="anders@andeby.dk"
              class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
            />
          </div>

          <!-- Postnummer & By -->
          <div class="flex gap-4">
            <div class="flex-1 flex flex-col">
              <label for="postcode" class="mb-1 font-medium">Postnummer:</label>
              <input
                type="text"
                id="postcode"
                name="postcode"
                placeholder="0900"
                class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
              />
            </div>
            <div class="flex-1 flex flex-col">
              <label for="city" class="mb-1 font-medium">By:</label>
              <input
                type="text"
                id="city"
                name="city"
                placeholder="Andeby C"
                class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
              />
            </div>
          </div>

          <!-- Telefon -->
          <div class="flex flex-col">
            <label for="tel" class="mb-1 font-medium">Telefon:</label>
            <input
              type="tel"
              id="tel"
              name="tel"
              placeholder="555-555"
              class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-400"
            />
          </div>

          <!-- Nyhedsbrev -->
          <div class="flex items-center gap-2">
            <input
              type="checkbox"
              id="newsletter"
              name="newsletter"
              class="accent-orange-400"
            />
            <label for="newsletter">Ja tak til nyhedsbreve og tilbud</label>
          </div>

          <!-- Submit knap -->
          <div>
            <Button type="submit" form="form" variant="primary" size="large"
              >Til betaling</Button
            >
          </div>
        </form>
      </div>
    </div>
    <!---------------------------------- Øvelse 5------------------------------------>
    <div>
      <h2
        class="mt-6 text-2xl uppercase font-semibold bg-orange-200 p-4 rounded"
      >
        Øvelse 5
      </h2>
      <div class="flex flex-col gap-6 mt-6">
        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="primary"
            size="small">Primær small</Link
          >
        </p>

        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="primary"
            size="medium">Primær medium</Link
          >
        </p>

        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="primary"
            size="large">Primær large</Link
          >
        </p>

        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="secondary"
            size="small">Sekundær small</Link
          >
        </p>

        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="secondary"
            size="medium">Sekundær medium</Link
          >
        </p>

        <p>
          Link til <Link
            href="https://www.kea.dk"
            target="_blank"
            variant="secondary"
            size="large">Sekundær large</Link
          >
        </p>
      </div>
    </div>
    <!---------------------------------- Øvelse 6------------------------------------>
    <div>
      <h2
        class="mt-6 text-2xl uppercase font-semibold bg-purple-200 p-4 rounded"
      >
        Øvelse 6
      </h2>
    </div>
    <!---------------------------------- Øvelse 7------------------------------------>
    <div>
      <h2 class="mt-6 text-2xl uppercase font-semibold bg-lime-200 p-4 rounded">
        Øvelse 7
      </h2>
      <Text teksttype="konsultativ"
        >Konsultativ ----- Lorem ipsum, dolor sit amet consectetur adipisicing
        elit. Quae, mollitia.</Text
      >
      <Text teksttype="brødtekst"
        >Brødtekst ----- Lorem ipsum dolor sit amet consectetur adipisicing
        elit. Architecto, id!</Text
      >
    </div>
    <!---------------------------------- Øvelse 8------------------------------------>
    <div>
      <h2 class="mt-6 text-2xl uppercase font-semibold bg-pink-200 p-4 rounded">
        Øvelse 8
      </h2>
      <Heading htmlheading="h1" size="large">Heading 1 large</Heading>
      <Heading htmlheading="h2" size="medium">Heading 2 medium</Heading>
      <Heading htmlheading="h3" size="small">Heading 3 small</Heading>
      <Heading htmlheading="h1" size="large" font="display"
        >Heading 1 large display</Heading
      >
      <Heading htmlheading="h2" size="medium" font="display"
        >Heading 2 medium display</Heading
      >
      <Heading htmlheading="h3" size="small" font="display"
        >Heading 3 small display</Heading
      >
      <Heading htmlheading="h1" size="large" font="serif"
        >Heading 1 large serif</Heading
      >
      <Heading htmlheading="h2" size="medium" font="serif"
        >Heading 2 medium serif</Heading
      >
      <Heading htmlheading="h3" size="small" font="serif"
        >Heading 3 small serif</Heading
      >
    </div>
    <!---------------------------------- Øvelse 9------------------------------------>
    <div>
      <h2 class="mt-6 text-2xl uppercase font-semibold bg-cyan-200 p-4 rounded">
        Øvelse 9
      </h2>
    </div>
  </section>
</MainLayout>
